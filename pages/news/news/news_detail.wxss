.box{
  overflow: hidden;
  position: fixed;
  bottom: 0;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg {
  width: 580rpx;
  height: 940rpx;
  position: fixed;
  top: 50rpx;
  left: 0;
  z-index: 9999;
  margin: 0rpx 85rpx;
  /* background-color: #fff; */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modalDlg image{
  width: 100%;
  height: 100%;
}
