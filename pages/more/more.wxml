<!--more.wxml-->
<view class="padding ucenter-bg">
  <view class="padding radius shadow-lg bg-white">
    <block wx:if="{{is_bind}}">
      <view class="info-hd">
        <view class="user-avatar">
          <open-data type="userAvatarUrl"></open-data>
        </view>
        <view class="user-title">
          <view class="user-name">
            <text>{{user.we.name}}</text>
            <text wx:if="{{user.we.more.sex === '男'}}" class="cuIcon-male text-blue"></text>
            <text wx:elif="{{user.we.more.sex === '女'}}" class="cuIcon-female text-pink"></text>
          </view>
          <text class="user-id">{{user.we.id}}</text>
        </view>
        <view class="time-box">
          <text class="time-term">{{time.term}}</text>
          <text class="time-now">第{{time.week}}周 - 星期{{time.day}}</text>
        </view>
      </view>
      <view class="info-bd" wx:if="{{!user.teacher}}">
        <view class="info-bd-left">
          <!-- <text class="user-text">年级：{{user.we.more.nj}}级</text> -->

          <text class="user-text">宿舍：{{user.we.info.build}}#{{user.we.info.room}}</text>
          <view class="user-text">
            <text class="text-grey">手机：{{user.we.info.mobile}}</text>
            <text wx:if="{{iswxmobile}}" class="cuIcon-safe text-blue"></text>  
          </view>
        </view>
        <view class="info-bd-right">
          <text class="user-text">学院：{{user.we.info.yxm}}</text>
          <text class="user-text">专业：{{user.we.more.zym}}</text>
        </view>
      </view>
      <view class="info-bd" wx:else>
        <view class="info-bd-left">
          <text class="user-text">工号：{{user.we.id}}</text>
          <text class="user-text">学院：{{user.we.info.yxm}}</text>
          <text class="user-text" wx:if="{{user.we.more.jysm}}">教研室：{{user.we.more.jysm}} {{user.we.more.zc}}</text>
        </view>
      </view>

    </block>
    <navigator url="/pages/more/login" wx:else>
      <view class="info-hd">
        <image class="user-avatar" src="{{user.wx.avatarUrl}}"></image>
        <view class="user-title">
          <text class="user-name">{{user.wx.nickName}}</text>
          <text class="user-id">未绑定</text>
        </view>
        <text class="bind-btn">前往绑定</text>
        <view class="btn-open">
          <image class="btn-enter" src="/images/more/enter.png"></image>
        </view>
      </view>
    </navigator>
  </view>
</view>
<view wx:if="{{is_bind}}" class="cu-list menu sm-border">
  <view class="cu-item arrow" wx:if="{{!user.teacher}}">
    <navigator class="content" url="append" hover-class="none">
      <text class='cuIcon-formfill'></text>
      <text class='text-grey'>完善信息</text>
    </navigator>
  </view>
  <view class="cu-item arrow">
    <button class='cu-btn content' open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">
      <text class='cuIcon-mobile'></text>
      <text class='text-grey'>绑定手机</text>
      <text wx:if="{{iswxmobile}}" class='text-blue'> (已绑定)</text>    
    </button>
  </view>
</view>
<view class="cu-list menu sm-border">
  <view class="cu-item arrow">
    <button class='cu-btn content' open-type='contact'>
      <text class='cuIcon-service text-yellow'></text>
      <text class='text-grey'>智能客服</text>
    </button>
  </view>
  <view class="cu-item arrow">
    <button class='cu-btn content' open-type='feedback'>
      <text class='cuIcon-writefill text-cyan'></text>
      <text class='text-grey'>意见反馈</text>
    </button>
  </view>
  <view class="cu-item arrow">
    <navigator class='content' url='about' hover-class='none'>
      <text class='cuIcon-we text-cyan'></text>
      <text class='text-grey'>关于我们</text>
    </navigator>
  </view>
</view>

<view class="padding flex flex-direction">
  <navigator url="login">
    <button wx:if="{{is_bind}}" class='cu-btn block bg-red shadow-blur lg'>切换绑定</button>
    <button wx:else class='cu-btn block bg-red shadow-blur lg'>立即绑定</button>
  </navigator>
</view>